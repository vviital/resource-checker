{
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "**/*.spec.js"
  ],
  "compilerOptions": {
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "experimentalDecorators": true,
      "module": "CommonJS",
      "noImplicitAny": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "target": "es6"
  }
}
